extends ./../../app/templates/base.jade
block content
  div(class="post")
    .row
      span.label.label-default.pull-right
        i.fa.fa-calendar-o
        postDate= postDate
    .row
    //- inject:mdPath
    //- endinject
    .row
      span.label.label-info.pull-right
        i.fa.fa-user-md
        author= author
      each tag in tags ? tags : ['There are no values']
        span.tags.label.label-tags
          i.fa.fa-tag
          tag= tag
    .row
      div(id="disqus_thread")
